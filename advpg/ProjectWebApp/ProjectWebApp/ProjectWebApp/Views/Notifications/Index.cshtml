@model IEnumerable<ProjectWebApp.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="d-flex justify-content-center align-items-center" style="height: 70vh; background: url('/images/back.jpg') no-repeat center center; background-size: cover;">

<div class="container">
    <form asp-action="Index" method="get" class="form-inline mb-3">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control mr-sm-2" placeholder="Search Notifications">
        <button type="submit" class="btn btn-outline-success">Search</button>
    </form>
<p>
            @if (User.IsInRole("Admin") || User.IsInRole("Manger"))
            {
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            }
        </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationStatus.NotificationStatus1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.NotificationId">Edit</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.NotificationId">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.NotificationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>