@model ProjectWebApp.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>
<div style="height: 100vh; background: url('/images/back.jpg') no-repeat center center; background-size: cover;">

<h4 class="text-center">Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentId" />
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayType" class="control-label"></label>
                <input asp-for="PayType" class="form-control" />
                <span asp-validation-for="PayType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceRequestId" class="control-label"></label>
                <select asp-for="ServiceRequestId" class="form-control" asp-items="ViewBag.ServiceRequestId"></select>
                <span asp-validation-for="ServiceRequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentStatusId" class="control-label"></label>
                <select asp-for="PaymentStatusId" class="form-control" asp-items="ViewBag.PaymentStatusId"></select>
                <span asp-validation-for="PaymentStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayDateTime" class="control-label"></label>
                <input asp-for="PayDateTime" class="form-control" />
                <span asp-validation-for="PayDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>