@model ProjectWebApp.Models.Payment

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>
<div style="height: 100vh; background: url('/images/back.jpg') no-repeat center center; background-size: cover;">
    <h4 class="text-center">Payment</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="PayType" class="form-control font-size" aria-required="true">
                        <option value="Visa Card">Visa Card</option>
                        <option value="Cash">Cash</option>
                        <option value="Technician">Other</option>
                    </select>
                    <label asp-for="PayType">PayType</label>
                    <span asp-validation-for="PayType" class="text-danger custom-font-size"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceRequestId" class="control-label"></label>
                    <select asp-for="ServiceRequestId" class="form-control" asp-items="ViewBag.ServiceRequestId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentStatusId" class="control-label"></label>
                    <select asp-for="PaymentStatusId" class="form-control" asp-items="ViewBag.PaymentStatusId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PayDateTime" class="control-label"></label>
                    <input asp-for="PayDateTime" class="form-control" />
                    <span asp-validation-for="PayDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <button type="button" class="btn btn-info" onclick="printPage()">Print</button>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            function printPage() {
                window.print();
            }
        </script>
    }
</div>
