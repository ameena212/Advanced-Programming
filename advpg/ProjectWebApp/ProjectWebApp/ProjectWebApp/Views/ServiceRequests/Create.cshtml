@model ProjectWebApp.Models.ServiceRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div style="height: 100vh; background: url('/images/back.jpg') no-repeat center center; background-size: cover;">

<h4>ServiceRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

                <div class="form-floating mb-3">
                    <select asp-for="Description" class="form-control font-size" aria-required="true">
                        <option value="Full house Service" selected>Full house Service</option>
                        <option value="Half house Service">Half house Service</option>
                        <option value="Other">Other</option>
                    </select>
                    <label asp-for="Description" class="custom-font-size-small">Description</label>
                    <span asp-validation-for="Description" class="text-danger custom-font-size-small"></span>
                </div>

            <div class="form-group">
                <label asp-for="DateNeeded" class="control-label"></label>
                <input asp-for="DateNeeded" class="form-control" />
                <span asp-validation-for="DateNeeded" class="text-danger"></span>
            </div>

                <div class="form-floating mb-3">
                    <select asp-for="Price" class="form-control font-size" aria-required="true">
                        <option value="100" selected>100</option>
                        <option value="50">50</option>
                        <option value="10">10</option>
                    </select>
                    <label asp-for="Price" class="custom-font-size-small">Price</label>
                    <span asp-validation-for="Price" class="text-danger custom-font-size-small"></span>
                </div>
         
            <div class="form-group">
                <label asp-for="ServiceStatusId" class="control-label"></label>
                <select asp-for="ServiceStatusId" class ="form-control" asp-items="ViewBag.ServiceStatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DocumentId" class="control-label"></label>
                <select asp-for="DocumentId" class ="form-control" asp-items="ViewBag.DocumentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
